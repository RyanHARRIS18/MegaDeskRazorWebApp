@page
@model MegaDeskWeb2.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label"></label>
                <input asp-for="Desk.Width" class="form-control" />
                <span asp-validation-for="Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label"></label>
                <input asp-for="Desk.Depth" class="form-control" />
                <span asp-validation-for="Desk.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Drawers" class="control-label"></label>
                <input asp-for="Desk.Drawers" type="number" min="0" max="7" class="form-control" required />
                <span asp-validation-for="Desk.Drawers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.DesktopMaterialId" class="control-label"></label>
               <select asp-for="Desk.DesktopMaterialId" class="form-control" asp-items="ViewBag.DesktopMaterialId" required>
                        <option value=""> Desktop Materials </option>
               </select>
                <span asp-validation-for="Desk.DesktopMaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DeliveryId" class="control-label"></label>
                <select asp-for="DeskQuote.DeliveryId" class="form-control" asp-items="ViewBag.DeliveryId" required>
                    <option value=""> Rush Order </option>
                 </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
