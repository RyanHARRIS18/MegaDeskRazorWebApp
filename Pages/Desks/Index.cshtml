@page
@model MegaDeskWeb2.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Customer: <input type="text" asp-for="searchString" />

        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                    @Html.DisplayNameFor(model => model.DeskQuote[0].CustomerName)
                </a>
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].Delivery)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].QuotePrice)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.DeskQuote[0].Date)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DeskQuote)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Delivery.DeliveryName)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.QuotePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.DeskQuoteId">Edit</a> |
                    @*<a asp-page="./Details" asp-route-id="@item.DeskQuoteId">Details</a> |*@
                    <a asp-page="./Delete" asp-route-id="@item.DeskQuoteId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
